{
  "name": "@coti-cvi/contracts-deploy",
  "version": "1.0.0",
  "sideEffects": false,
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "start:polygon-local": "cross-env ABI_FILE_PORT=7001 CHAIN_ID=31138 yarn start:hardhat:node:base --port 8546",
    "start:eth-local": "cross-env ABI_FILE_PORT=7002 CHAIN_ID=31137 yarn start:hardhat:node:base --port 8545",
    "start:arb-local": "cross-env ABI_FILE_PORT=7003 CHAIN_ID=31139 yarn start:hardhat:node:base --port 8547",
    "test": "time cross-env TS_NODE_TRANSPILE_ONLY=1 HARDHAT_TEST=true hardhat test --show-stack-traces",
    "test-all": "yarn workspace @coti-cvi/contracts-il test && yarn test",
    "clean": "cross-env rm -rf cache artifacts > /dev/null 2>&1 || exit 0",
    "clean-all": "yarn workspace @coti-cvi/contracts-il clean & yarn workspace @coti-cvi/contracts-cvi clean & yarn clean & wait",
    "il:coverage": "cross-env npx hardhat coverage",
    "only-gen-types": "cross-env TS_NODE_TRANSPILE_ONLY=1 GEN_TYPES=true yarn hardhat typechain",
    "watch": "cross-env TS_NODE_TRANSPILE_ONLY=1 GEN_TYPES=true yarn hardhat watch compilation",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=1 hardhat compile --show-stack-traces",
    "compile-all": "yarn workspace @coti-cvi/contracts-il compile & yarn workspace @coti-cvi/contracts-cvi compile & yarn compile & wait",
    "remove-types": "rm -rf ../auto-generated-code/src/git-contract-types/* && echo 'export default {}' > ../auto-generated-code/src/git-contract-types/index.ts",
    "regen-types": "yarn remove-types & yarn clean-all && yarn compile && yarn only-gen-types",
    "export-deployments": "TS_NODE_TRANSPILE_ONLY=1 yarn deploy --tags a --network PolygonMainnet --description '1' &  TS_NODE_TRANSPILE_ONLY=1 yarn deploy --tags a --network EthereumMainnet --description '1' &  TS_NODE_TRANSPILE_ONLY=1 yarn deploy --tags a --network ArbitrumMainnet --description '1' & wait",
    "start:hardhat:node:base": "cross-env TS_NODE_TRANSPILE_ONLY=1 START_HARDHAT_NODE=true yarn hardhat node --show-stack-traces",
    "start:hardhat:node": "cross-env yarn start:hardhat:node:base --port 9545",
    "build:hardhat-nodes": "cross-env docker-compose -f docker-compose.yml build",
    "start:hardhat-nodes": "cross-env yarn build:hardhat-nodes && docker-compose -f docker-compose.yml up -d --remove-orphans",
    "stop:hardhat-nodes": "cross-env docker-compose -f docker-compose.yml down --remove-orphans",
    "reset:hardhat-nodes": "cross-env yarn stop:hardhat-nodes && yarn start:hardhat-nodes",
    "deploy": "cross-env HARDHAT_DEPLOY=true yarn hardhat deploy --show-stack-traces",
    "deployment-history": "cross-env HARDHAT_DEPLOY=true yarn hardhat deployment-history --show-stack-traces"
  },
  "dependencies": {
    "@abraham/reflection": "^0.8.0",
    "@chainlink/contracts": "^0.2.2",
    "@coti-cvi/common-be": "1.0.0",
    "@coti-cvi/lw-sdk": "1.0.0",
    "@defi-wonderland/smock": "^2.0.7",
    "@ethersproject/bignumber": "5.6.2",
    "@ethersproject/constants": "5.6.1",
    "@ethersproject/contracts": "5.6.2",
    "@ethersproject/providers": "5.6.2",
    "@fastify/cors": "8.1.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@openzeppelin/contracts": "^4.3.2",
    "@openzeppelin/contracts-upgradeable": "^4.3.2",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/ethers-v5": "10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "chai": "^4.3.6",
    "chai-ethers": "^0.0.1",
    "cross-env": "^7.0.3",
    "defender-admin-client": "^1.21.3",
    "dotenv": "^16.0.1",
    "ethers": "5.6.9",
    "execa": "5.1.1",
    "fastify": "4.4.0",
    "find-up": "5.0.0",
    "hardhat": "2.9.2",
    "hardhat-deploy": "^0.11.4",
    "hardhat-watcher": "^2.3.0",
    "http-status-codes": "2.1.4",
    "inversify": "^6.0.1",
    "is-docker": "2.2.1",
    "lodash": "^4.17.21",
    "mocha": "^9.2.2",
    "mocha-explorer-launcher-scripts": "^0.4.0",
    "nyc": "^15.1.0",
    "pino-pretty": "^7.6.1",
    "prb-math": "^2.4.3",
    "typechain": "^8.0.0"
  },
  "devDependencies": {
    "solidity-coverage": "^0.7.21"
  }
}
